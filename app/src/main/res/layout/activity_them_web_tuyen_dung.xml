<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vang"
    android:orientation="vertical"
    tools:context=".ThemWebTuyenDung">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="@string/themtrang"
        android:textSize="25sp"
        android:layout_gravity="center">
    </TextView>
    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tentrangweb"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edttentrangweb"
            android:layout_weight="1"
            android:layout_marginTop="5sp"
            android:padding="6dp"
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/urltrangwweb"
                android:textSize="18sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edturltrangweb"
            android:layout_weight="1"
            android:padding="6dp"
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/edit_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/api"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtapi"
            android:layout_weight="1"
            android:padding="6dp"
            android:layout_marginHorizontal="8dp"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingBottom="32dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnthemweb"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/btnthem"
            android:background="@drawable/custom_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btnxoaweb"
            android:text="@string/btnxoa"
            android:layout_marginStart="2dp"
            android:background="@drawable/custom_button"/>

        <Button
            android:layout_marginStart="2sp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btnhuy"
            android:text="@string/btnhuy"
            android:layout_marginEnd="15sp"
            android:background="@drawable/custom_button"/>
    </LinearLayout>

</LinearLayout>