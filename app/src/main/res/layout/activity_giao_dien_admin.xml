<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GiaoDienAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_weight="2"
        android:background="@drawable/header_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/user_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/avatar" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tenAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:fontFamily="serif-monospace"
                android:textSize="24dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical='8dp'
                android:layout_marginLeft="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="6dp"
                    android:src="@drawable/mail" />

                <TextView
                    android:id="@+id/emailAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical='8dp'
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="6dp"
                    android:src="@drawable/phonel" />

                <TextView
                    android:id="@+id/sdtAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical='8dp'
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="6dp"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/diaChiAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/vang"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/favorited_jobs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical='16dp'
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/quanly" />

            <TextView
                android:id="@+id/tvweb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/qlttd"
                android:textSize="18sp" />
        </LinearLayout>

        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginVertical='16dp'-->
        <!--            android:layout_marginStart="4dp"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:id="@+id/yourJobs">-->

        <!--            <ImageView-->
        <!--                android:layout_width="30dp"-->
        <!--                android:layout_height="30dp"-->
        <!--                android:layout_marginHorizontal="6dp"-->
        <!--                android:src="@drawable/suitcase" />-->

        <!--            <TextView-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text="Your Jobs"-->
        <!--                android:textSize="18sp" />-->
        <!--        </LinearLayout>-->


        <LinearLayout
            android:id="@+id/your_Posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical='16dp'
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/tvqltk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/qltk"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical='16dp'
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal">



            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/fingerprint" />

            <TextView
                android:id="@+id/tvcnyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/cnyc"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/change_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical='16dp'
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/pin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/changepass"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical='16dp'
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/logout" />

            <TextView
                android:id="@+id/tvlogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/logout"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>